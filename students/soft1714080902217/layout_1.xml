<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/contentText"
        android:textSize="16sp"
        android:text="输入算式进行计算"
        android:layout_gravity="fill"
        android:maxLines="1"
        android:layout_marginTop="55sp"
        android:paddingRight="15sp"
        android:layout_columnSpan="4"
        android:gravity="right"/>
    <Button
        android:id="@+id/bt1"
        android:text="CE"
        android:layout_gravity="fill"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/bt2"
        android:text="Backspace"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="fill"
        android:layout_columnSpan="2"

        />
    <Button
        android:id="@+id/bt18"
        android:text="/"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/bt3"
        android:text="7"
        />
    <Button
        android:id="@+id/bt4"
        android:text="8"
        />
    <Button
        android:id="@+id/bt5"
        android:text="9"
        />
    <Button
        android:id="@+id/bt6"
        android:text="*"
        />
    <Button
        android:id="@+id/bt7"
        android:text="4"
        />
    <Button
        android:id="@+id/bt8"
        android:text="5"
        />
    <Button
        android:id="@+id/bt9"
        android:text="6"
        />
    <Button
        android:id="@+id/bt10"
        android:text="-"
        />
    <Button
        android:id="@+id/bt11"
        android:text="1"
        />
    <Button
        android:id="@+id/bt12"
        android:text="2"
        />
    <Button
        android:id="@+id/bt13"
        android:text="3"
        />
    <Button
        android:id="@+id/bt14"
        android:text="="
        android:layout_gravity="fill"
        android:layout_rowSpan="2"
        />
    <Button
        android:id="@+id/bt15"
        android:text="0"
        />
    <Button
        android:id="@+id/bt16"
        android:text="."
        />
    <Button
        android:id="@+id/bt17"
        android:text="+"
        />
</GridLayout>
