<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <TextView
        android:id="@string/birthday_lableperson"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:text="@string/birthday_lableperson"
        android:textSize="@dimen/fab_margin"/>

    <TextView
        android:id="@string/birthday_wishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/birthday_wishes"
        android:textSize="@dimen/fab_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/birthday_wishes"
        android:text="@string/wishes"
        android:textSize="@dimen/fab_margin" />

</LinearLayout>
