<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--背景色-->
    <solid android:color="@color/colorWhite"/>

    <!--边框-->
    <stroke
        android:width="2px"
        android:color="@color/colorBlack"
        android:dashWidth="5dp"/>

    <!--渐变-->
    <gradient
        android:angle="90"
        android:endColor="@color/darkgray"
        android:centerColor="@color/whitesmoke"
        android:startColor="@color/lightgray"/>

    <!--圆角半径-->
    <corners
        android:bottomLeftRadius="30px"
        android:bottomRightRadius="30px"
        android:topLeftRadius="30px"
        android:topRightRadius="30px"/>

    <!--边距-->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"/>

</shape>