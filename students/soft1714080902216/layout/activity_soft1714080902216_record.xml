<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b5"
    tools:context=".Soft1714080902216RecordActivity">

    <TextView
        android:id="@+id/Tellname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="108dp"
        android:text="请输入姓名："
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Inputname_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_x="0dp"
        android:layout_y="139dp"
        android:hint="Name"
        android:maxLines="1" />

    <TextView
        android:id="@+id/Telldata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="188dp"
        android:text="请输入生日(如19900101)："
        android:textColor="#000000"
        android:textSize="20sp" />
    />

    <EditText
        android:id="@+id/inputdata"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_x="0dp"
        android:layout_y="217dp"
        android:hint="birthday"
        android:maxLines="1" />

    <Button
        android:id="@+id/inputLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_x="79dp"
        android:layout_y="334dp"
        android:text="提交"
        android:textSize="30sp" />

    <Button
        android:id="@+id/Comeback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_x="189dp"
        android:layout_y="334dp"
        android:text="返回"
        android:textSize="30sp"
        android:onClick="back"/>

</AbsoluteLayout >