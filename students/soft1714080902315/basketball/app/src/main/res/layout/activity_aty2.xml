<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.administrator.basketball.Aty2Activity">


    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="篮球视频大全"
        android:textColor="@color/darkcyan"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:id="@+id/image_button1"
        android:layout_width="1500dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/vedio1"
        android:layout_below="@+id/text_view"
        android:layout_alignLeft="@+id/text_view"
        android:layout_alignStart="@+id/text_view" />
    <TextView
        android:id="@+id/text_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="18-19赛季常规赛 骑士VS步行者"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/image_button1"
        android:layout_toRightOf="@+id/scrollView"
        android:layout_toEndOf="@+id/scrollView" />
    <ImageButton
        android:id="@+id/image_button2"
        android:layout_width="1500dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/vedio2"
        android:layout_above="@+id/text_view2"
        android:layout_alignLeft="@+id/text_view3"
        android:layout_alignStart="@+id/text_view3" />
    <TextView
        android:id="@+id/text_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="18-19赛季常规赛 勇士VS骑士"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/image_button2"
        android:layout_alignStart="@+id/image_button2"
        android:layout_marginBottom="26dp" />
    <ImageButton
        android:id="@+id/image_button3"
        android:layout_width="1500dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/vedio3"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/text_view3"
        android:layout_alignStart="@+id/text_view3" />
    <TextView
        android:id="@+id/text_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="欧文过人集锦"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/image_button3"
        android:layout_alignLeft="@+id/text_view1"
        android:layout_alignStart="@+id/text_view1" />


</RelativeLayout>
