<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#123E54</item>    <!-- 更改了顶栏和底部菜单栏图标及文字的颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="home_button_style">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_home_button</item>
    </style>

    <style name="amiibo_imgbutton_style">
        <item name="android:layout_height">137dp</item>
        <item name="android:layout_width">142dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="amiibo_textview_style">
        <item name="android:layout_width">142dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="amiibo_textview_type_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="amiibo_detail_ability_name_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="counter_text_name_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="counter_text_indicate_style">
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="counter_text_indicate_style2">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="counter_select_style">
        <item name="android:layout_width">102dp</item>
        <item name="android:layout_height">102dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="button_amiibo_share_photo">
        <item name="android:background">@drawable/shape_amiibo_share_button</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
