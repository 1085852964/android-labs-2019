            <TextView
                android:id="@+id/text_ability_clothing_1"
                style="@style/counter_text_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="@string/ability_ink_saver_sub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgButton_ability_clothing_1" />

            <!-- Shoes Ability Part -->
            <TextView
                android:id="@+id/text_indecate_shoes"
                style="@style/counter_text_indicate_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="@string/counter_shoes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_ability_clothing_1" />

            <ImageButton
                android:id="@+id/imgButton_ability_shoes_1"
                android:layout_width="108dp"
                android:layout_height="109dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ability_ink_saver_sub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_indecate_shoes" />

            <ImageButton
                android:id="@+id/imgButton_ability_shoes_2"
                android:layout_width="70dp"
                android:layout_height="73dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ability_ink_saver_sub"
