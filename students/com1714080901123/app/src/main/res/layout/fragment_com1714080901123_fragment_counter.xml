            <ImageButton
                android:id="@+id/imgButton_ability_headgear_3"
                android:layout_width="70dp"
                android:layout_height="73dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ability_ink_saver_sub"
                app:layout_constraintStart_toEndOf="@id/imgButton_ability_headgear_2"
                app:layout_constraintTop_toTopOf="@id/imgButton_ability_headgear_2" />

            <ImageButton
                android:id="@+id/imgButton_ability_headgear_4"
                android:layout_width="70dp"
                android:layout_height="73dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/ability_ink_saver_sub"
                app:layout_constraintStart_toEndOf="@id/imgButton_ability_headgear_3"
                app:layout_constraintTop_toTopOf="@id/imgButton_ability_headgear_3" />

            <TextView
                android:id="@+id/text_ability_headgear_1"
                style="@style/counter_text_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="@string/ability_ink_saver_sub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgButton_ability_headgear_1" />

            <!-- Clothing Ability Part -->
            <TextView
                android:id="@+id/text_indecate_clothing"
                style="@style/counter_text_indicate_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="@string/counter_clothing"
