                app:layout_constraintTop_toBottomOf="@id/text_ability_headgear_1" />

            <ImageButton
                android:id="@+id/imgButton_ability_clothing_1"
                android:layout_width="108dp"
                android:layout_height="109dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ability_ink_saver_sub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_indecate_clothing" />

            <ImageButton
                android:id="@+id/imgButton_ability_clothing_2"
                android:layout_width="70dp"
                android:layout_height="73dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ability_ink_saver_sub"
                app:layout_constraintStart_toEndOf="@id/imgButton_ability_clothing_1"
                app:layout_constraintTop_toTopOf="@id/imgButton_ability_clothing_1" />

            <ImageButton
                android:id="@+id/imgButton_ability_clothing_3"
                android:layout_width="70dp"
                android:layout_height="73dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ability_ink_saver_sub"
                app:layout_constraintStart_toEndOf="@id/imgButton_ability_clothing_2"
