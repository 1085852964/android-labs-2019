            <ImageButton
                android:id="@+id/imgButton_ability_clothing_4"
                android:layout_width="70dp"
                android:layout_height="73dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ability_ink_saver_sub"
                app:layout_constraintStart_toEndOf="@id/imgButton_ability_clothing_3"
