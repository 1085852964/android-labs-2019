                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:text="@string/weapon_sub_curling_bomb"
                app:layout_constraintStart_toEndOf="@id/text_weapon_main"
                app:layout_constraintTop_toTopOf="@id/text_weapon_main" />

            <TextView
                android:id="@+id/text_weapon_special"
                style="@style/counter_text_name_style"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:text="@string/weapon_special_inkjet"
                app:layout_constraintStart_toEndOf="@id/text_weapon_sub"
                app:layout_constraintTop_toTopOf="@id/text_weapon_sub" />

            <!-- Ability Part -->
            <TextView
                android:id="@+id/text_indicate2"
                style="@style/counter_text_indicate_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
