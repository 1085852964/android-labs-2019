                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/imgButton_weapon_main"
                android:layout_width="164dp"
                android:layout_height="173dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:scaleType="centerInside"
                android:src="@drawable/weapon_main_enperry_splat_dualies"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_weapon_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/weapon_sub_curling_bomb"
                app:layout_constraintStart_toEndOf="@id/imgButton_weapon_main"
                app:layout_constraintTop_toTopOf="@id/imgButton_weapon_main" />

            <ImageView
                android:id="@+id/img_weapon_special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:src="@drawable/weapon_special_inkjet"
                app:layout_constraintStart_toEndOf="@id/img_weapon_sub"
                app:layout_constraintTop_toTopOf="@id/img_weapon_sub" />

            <TextView
                android:id="@+id/text_weapon_main"
                style="@style/counter_text_name_style"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/weapon_main_enperry_splat_dualies"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgButton_weapon_main" />

            <TextView
