            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/name_octoling_girl"
                    style="@style/amiibo_textview_style"
                    android:textColor="#BA0636"/>
                <TextView
                    android:text="@string/name_octoling_boy"
                    style="@style/amiibo_textview_style"
                    android:textColor="#BA0636"/>
                <TextView
                    android:text="@string/name_octoling_octopus"
                    style="@style/amiibo_textview_style"
                    android:textColor="#BA0636"/>
            </TableRow>

            <TextView
                android:text="@string/amiibo_recolor"
                style="@style/amiibo_textview_type_style"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/imageButton14"
                    style="@style/amiibo_imgbutton_style"
                    android:src="@drawable/amiibo_inkling_girl_recolor" />
                <ImageButton
                    android:id="@+id/imageButton15"
                    style="@style/amiibo_imgbutton_style"
                    android:src="@drawable/amiibo_inkling_boy_recolor" />
                <ImageButton
                    android:id="@+id/imageButton16"
                    style="@style/amiibo_imgbutton_style"
                    android:src="@drawable/amiibo_inkling_squid_recolor" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/name_inkling_girl_recolor"
                    style="@style/amiibo_textview_style"
                    android:textColor="#10ED0C"/>
                <TextView
                    android:text="@string/name_inkling_boy_recolor"
                    style="@style/amiibo_textview_style"
                    android:textColor="#9613ED"/>
                <TextView
                    android:text="@string/name_inkling_squid_recolor"
                    style="@style/amiibo_textview_style"
                    android:textColor="#FF4800"/>
            </TableRow>

            <TextView
                android:text="@string/amiibo_special"
                style="@style/amiibo_textview_type_style"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
