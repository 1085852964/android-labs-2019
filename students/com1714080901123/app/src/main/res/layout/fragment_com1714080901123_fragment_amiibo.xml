                    android:text="@string/name_inkling_squid"
                    style="@style/amiibo_textview_style"
                    android:textColor="#10ED0C"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/imageButton04"
                    style="@style/amiibo_imgbutton_style"
                    android:src="@drawable/amiibo_callie" />
                <ImageButton
                    android:id="@+id/imageButton05"
                    style="@style/amiibo_imgbutton_style"
                    android:src="@drawable/amiibo_marie" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/name_callie"
                    style="@style/amiibo_textview_style"
                    android:textColor="#FF7AB2"/>
                <TextView
                    android:text="@string/name_marie"
                    style="@style/amiibo_textview_style"
                    android:textColor="#20E340"/>
