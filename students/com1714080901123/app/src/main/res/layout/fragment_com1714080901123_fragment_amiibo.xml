                    style="@style/amiibo_textview_style"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/imageButton06"
                    style="@style/amiibo_imgbutton_style"
                    android:src="@drawable/amiibo_inkling_girl2" />
                <ImageButton
                    android:id="@+id/imageButton07"
                    style="@style/amiibo_imgbutton_style"
                    android:src="@drawable/amiibo_inkling_boy2" />
                <ImageButton
                    android:id="@+id/imageButton08"
                    style="@style/amiibo_imgbutton_style"
                    android:src="@drawable/amiibo_inkling_squid2" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/name_inkling_girl2"
                    style="@style/amiibo_textview_style"
                    android:textColor="#F20558"/>
                <TextView
                    android:text="@string/name_inkling_boy2"
                    style="@style/amiibo_textview_style"
                    android:textColor="#00C907"/>
                <TextView
                    android:text="@string/name_inkling_squid2"
                    style="@style/amiibo_textview_style"
                    android:textColor="#9E00FA"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/imageButton09"
                    style="@style/amiibo_imgbutton_style"
                    android:src="@drawable/amiibo_pearl" />
                <ImageButton
                    android:id="@+id/imageButton10"
                    style="@style/amiibo_imgbutton_style"
                    android:src="@drawable/amiibo_marina" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/name_pearl"
                    style="@style/amiibo_textview_style"
                    android:textColor="#F7BAE3"/>
                <TextView
                    android:text="@string/name_marina"
                    style="@style/amiibo_textview_style"
                    android:textColor="#167D4F"/>
                <TextView
                    style="@style/amiibo_textview_style"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/imageButton11"
                    style="@style/amiibo_imgbutton_style"
                    android:src="@drawable/amiibo_octoling_girl" />
