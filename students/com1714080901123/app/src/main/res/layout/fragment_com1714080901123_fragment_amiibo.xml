            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/name_inkling_girl_ssbu"
                    style="@style/amiibo_textview_style"
                    android:textColor="#FF4800"/>
                <TextView
                    style="@style/amiibo_textview_style"/>
                <TextView
                    style="@style/amiibo_textview_style"/>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="56dp"
                /><!-- 放一个空白view，用来防止scrollview最底部被菜单挡住 -->
        </TableLayout>
    </ScrollView>

</FrameLayout>