<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Soft1714080902307Activity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                app:layout_constraintBottom_toTopOf="@+id/nav_all"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.54"
                app:srcCompat="@drawable/background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/nav_all"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    app:srcCompat="@drawable/all" />

                <ImageButton
                    android:id="@+id/nav_tool"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    app:srcCompat="@drawable/tool"
                    tools:layout_editor_absoluteX="127dp"
                    tools:layout_editor_absoluteY="142dp" />

                <ImageButton
                    android:id="@+id/nav_media"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    app:srcCompat="@drawable/media" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/nav_emoji"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    app:srcCompat="@drawable/emoji" />

                <ImageButton
                    android:id="@+id/nav_wallpaper"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    app:srcCompat="@drawable/wallpaper"
                    tools:layout_editor_absoluteX="127dp"
                    tools:layout_editor_absoluteY="142dp" />

                <ImageButton
                    android:id="@+id/nav_developing"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    app:srcCompat="@drawable/developing" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>